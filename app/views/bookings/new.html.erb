<div class="container">
  <div class="row">
    <h1 class="margin-top">Your booking for <%= @developer.name %>:</h1>
  </div>
  <div class="row">
    <h3 class="margin-top">Daily rate: $<%=@developer.daily_rate %></h3>
  </div>
  <div class="form margin-top">
    <%= simple_form_for [@developer, @booking] do |f| %>
      <%= f.input :project_name %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit "Book the developer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
