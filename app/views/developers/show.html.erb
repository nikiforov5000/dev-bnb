<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="developer-show-card">
        <h1><%= @developer.name %></h1>
        <p class="developer-show-bio"><%= @developer.bio %></p>
      </div>
      <div class="developer-show-card">
        <h3>Development languages</h3>
        <p><%= @developer.specialty %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="developer-show-card">
        <h3>Hire the developer!</h3>
        <p>Developer daily rate: $500</p>
        <button type="button">Book developer</button>
        </div>
      </div>
    </div>
  </div>
</div>
