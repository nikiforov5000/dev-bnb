<% @title_content = "All developers" %>

<%= form_tag root_path, method: :get do %>
  <%= 
    text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a developer"
  %>

  <ul class="bg-light">
    <% @specialtys.each do |specialty| %>
        <span>
          <%= check_box_tag 'query', specialty %>
          <%= "#{specialty}" %>
        </span>
    <% end %>
</ul>

  <%= submit_tag "Search", class: "btn btn-primary btn-block" %>
<% end %>

 

<%= link_to "Add developer", new_developer_path %>
<%= render "layouts/header_for_index", locals: { title_content: @title_content } %>
<%= render 'layouts/developers_index' %>
